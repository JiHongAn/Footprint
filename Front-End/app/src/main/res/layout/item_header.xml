<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="20dp"
        android:paddingBottom="32dp">

        <RelativeLayout
            android:id="@+id/layout_my_location"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/card_layout_location"
            android:onClick="onMyLocation">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_location"
                android:backgroundTint="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_full_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_city"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/layout_my_location"
            android:singleLine="true"
            android:text="기흥구"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용인시"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!-- End of header -->


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/header"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/card_searchbar"
        android:onClick="onPick">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_search"
            android:backgroundTint="#999999" />

        <TextView
            android:id="@+id/text_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/img_search"
            android:singleLine="true"
            android:text="어디로 떠나실 건가요?"
            android:textColor="#999999"
            android:textSize="16dp" />
    </RelativeLayout>
    <!-- End of location-->

    <include
        android:id="@+id/layout_category"
        layout="@layout/include_category"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/layout_search" />
</RelativeLayout>
